<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/canvas_default"
    android:saveEnabled="true" 
    android:keepScreenOn="true">

    <ar.uba.fi.talker.view.Scenario
        android:id="@+id/gestureOverlayView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/bottom"
        android:layout_alignParentLeft="true"
        android:saveEnabled="true"
        android:layout_below="@+id/pencilOption" >

    </ar.uba.fi.talker.view.Scenario>

    <ImageButton
        android:id="@+id/pencilOption"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/pencil"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
		android:adjustViewBounds="true"  />

    <ImageButton
        android:id="@+id/eraserOption"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/pencilOption"
        android:src="@drawable/eraser"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
		android:adjustViewBounds="true"  />
    

    <ImageButton
        android:id="@+id/textOption"
        android:layout_above="@+id/gestureOverlayView1"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/eraserOption"
        android:src="@drawable/insert_text"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
		android:adjustViewBounds="true"  />
	

    <ImageButton
        android:id="@+id/bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/abc_ic_clear_normal" />

    <ImageButton
        android:id="@+id/insertContactOption"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/gestureOverlayView1"
        android:layout_toRightOf="@+id/insertImageOption"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/contact_icon" />

    <ImageButton
        android:id="@+id/calculatorOption"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/gestureOverlayView1"
        android:layout_toRightOf="@+id/insertContactOption"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/calculator_icon" />

    <ImageButton
        android:id="@+id/calendarOption"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/gestureOverlayView1"
        android:layout_toRightOf="@+id/calculatorOption"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/calendar_icon" />

    <ImageButton
        android:id="@+id/eraseAllOption"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/erase_all" />

    <ImageButton
        android:id="@+id/insertImageOption"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="48dp"
        android:layout_toRightOf="@+id/textOption"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/image_icon" />

</RelativeLayout>